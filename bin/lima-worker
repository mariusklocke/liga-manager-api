#!/usr/bin/env php
<?php
require_once __DIR__ . '/../vendor/autoload.php';

use HexagonalPlayground\Infrastructure\API\Application;
use Nyholm\Psr7\Factory\Psr17Factory;
use Psr\Log\LoggerInterface;
use Spiral\RoadRunner\Worker;
use Spiral\RoadRunner\Http\PSR7Worker;

$app = new Application();
$logger = $app->getContainer()->get(LoggerInterface::class);
$worker = Worker::create(true, $logger);
$psrFactory = new Psr17Factory();
$psrWorker = new PSR7Worker($worker, $psrFactory, $psrFactory, $psrFactory);

while (true) {
    try {
        $request = $psrWorker->waitRequest();
        if ($request === null) {
            break;
        }
    } catch (\Throwable $e) {
        $psrWorker->respond($psrFactory->createResponse(400));
        continue;
    }

    try {
        $response = $app->handle($request);
    } catch (\Throwable $e) {
        $response = $psrFactory->createResponse(500);
        $logger->error((string)$e);
    } finally {
        $psrWorker->respond($response);
        if ($response->getStatusCode() === 500) {
            // in case of unexpected error the application state can be corrupted: it's safer to terminate
            $logger->error('Terminating worker process due to unexpected error.');
            exit(1);
        }
    }
}
