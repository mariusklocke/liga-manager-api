{
    "name": "mklocke/hexagonal-playground",
    "type": "project",
    "authors": [
        {
            "name": "Marius Klocke",
            "email": "marius.klocke@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "HexagonalPlayground\\": "src/"}
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "phar-tools": {
            "composer.phar": "https://github.com/composer/composer/releases/download/2.1.3/composer.phar",
            "phpunit.phar": "https://phar.phpunit.de/phpunit-9.5.6.phar",
            "php-coveralls.phar": "https://github.com/php-coveralls/php-coveralls/releases/download/v2.4.3/php-coveralls.phar",
            "deptrac.phar": "https://github.com/qossmic/deptrac/releases/download/0.14.1/deptrac.phar"
        }
    },
    "require": {
        "php": "^7.3 | ^8",
        "ext-ctype": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-redis": "*",
        "doctrine/cache": "^1.11",
        "doctrine/migrations": "^3.2",
        "doctrine/orm": "~2.9.3",
        "firebase/php-jwt": "^5.4",
        "middlewares/trailing-slash": "^2.0",
        "monolog/monolog": "^2.3.1",
        "nyholm/psr7": "^1.4.1",
        "nyholm/psr7-server": "^1.0.2",
        "php-di/php-di": "^6.0",
        "ramsey/uuid": "^4.1",
        "slim/slim": "^4.8.1",
        "swiftmailer/swiftmailer": "^6.2",
        "symfony/console": "^5.3.2",
        "web-auth/webauthn-lib": "^3.3.9",
        "webonyx/graphql-php": "^0.13.9"
    }
}
